{% block recovery_widget %}
<!--.recovery-form-->
<div class="row recovery-form">
  <div class="col-md-4 col-md-offset-4">
    <!--.panel-->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">{% block title %}Password recovery{% endblock %}</h3>
      </div>
      <div class="panel-body">
        {% block instructions %}
        <p>Enter the email address used for your account.</p>
        {% endblock instructions %}

        {% block message %}
          {% include "@SilexUser/alerts.html.twig" %}
        {% endblock message %}

        {% block form %}
        <!--form-->
        {{ form_start(form) }}
          {{ form_errors(form) }}
          {% for child in form %}
              {{ form_row(child) }}
          {% endfor %}
          {% block buttons %}
          <button type="submit" class="btn">Submit</button>
          {% endblock buttons %}
        {{ form_end(form) }}
        <!--/form-->
        {% endblock form %}
      </div>
    </div>
    <!--/.panel-->
  </div>
</div>
<!--/.recovery-form-->
{% endblock recovery_widget%}
