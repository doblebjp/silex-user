{% block login_widget %}
<!--.login-form-->
<div class="row login-form">
  <div class="col-md-4 col-md-offset-4">
    <!--.panel-->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">{% block title %}Login{% endblock %}</h3>
      </div>
      <div class="panel-body">
        {% block message %}
          {% include "@SilexUser/alerts.html.twig" %}
        {% endblock message %}

        {% block form %}
        <!--form-->
        <form role="form" action="{{ path('authenticate') }}" method="post">
          {% if error %}
          <div class="alert alert-dismissable alert-danger">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          {{ error }}
          </div>
          {% endif %}
          <div class="form-group">
            <label for="username">{% if app['silex_user.email_as_identity'] %}Email{% else %}Username{% endif %}</label>
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="_password" value="">
          </div>
          {% block buttons %}
          <a href="{{ path('register') }}" class="btn btn-link pull-right" >Register</a>
          <button type="submit" class="btn">Login</button>
          <a href="{{ path('recovery') }}" class="btn btn-link" >Recover Password</a>
          {% endblock buttons %}
        </form>
        <!--/form-->
        {% endblock form %}
      </div>
    </div>
    <!--/.panel-->
  </div>
</div>
<!--/.login-form-->

{% endblock login_widget %}
